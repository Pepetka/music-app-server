{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "cross-env NODE_ENV=production npx tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npx tsc --watch --preserveWatchOutput\" \"nodemon src/index.ts\" \"nodemon -x tsoa spec\"",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger && npm run clean",
    "swagger": "tsoa spec",
    "clean": "rimraf dist/",
    "rabbitmq:start": "docker run -it --rm --name rabbitmq -p 5672:5672 -p 15672:15672 rabbitmq:3.13-management",
    "redis:start": "docker run -p 6379:6379 -it redis/redis-stack-server:latest",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "lint:fix": "eslint --fix --ignore-path .eslintignore \"src/**/*.ts\"",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": {
    "name": "Kuznetsov Vladislav",
    "email": "vlad.kznetsov@gmail.com",
    "url": "https://github.com/Pepetka"
  },
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.5",
    "@types/pg": "^8.11.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:check"
    ]
  },
  "engines": {
    "node": "20.12.1",
    "npm": "8.5.5"
  }
}
